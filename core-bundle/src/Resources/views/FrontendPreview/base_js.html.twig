<!-- START of Contao Preview Toolbar -->
<div class="cto-toolbar" data-position="left" data-orientation="vertical">
    <div class="cto-toolbar__inside"></div>
</div>

<style>
    .cto-toolbar {
        font: 400 .875rem/1 -apple-system, system-ui, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        color: #444444;
        background: #eeeeee;
        top: 0;
        position: sticky;
        z-index: 99999;
        border-bottom: 1px solid #ffffff;
        overflow: unset;
    }

    @media screen and (min-width: 768px) {
        body {
            display: grid;
            grid-template-columns: 260px 1fr;
        }
    }

    .cto-toolbar[data-position="left"] {
        /*position: fixed;*/
        /*width: 20em;*/
        /*height: 100%;*/
    }

    @media screen and (max-width: 767px) {
        .cto-toolbar[data-orientation="vertical"] {
            display: none;
        }
    }

    .cto-toolbar[data-position="right"] {
        position: fixed;
        width: 18vw;
        height: 100%;
        right: 0;
    }

    .cto-toolbar__inside {
        display: grid;
        grid-template: auto / 1fr auto;
    }

    [data-orientation="horizontal"] .cto-toolbar__inside {
        border-bottom: 1px solid #cccccc;
    }

    [data-orientation="vertical"] .cto-toolbar__inside {
        grid-template: auto 1fr / auto;
        position: sticky;
        top: 0;
    }

    .cto-toolbar__section {
        padding: .25em 0;
    }

    [data-orientation="vertical"] .cto-toolbar__section {
        background: #ffffff;
        margin: 0 0 .75em 0;
        border-bottom: 1px solid #dddddd;
        padding: .5em 1em;
    }

    .cto-toolbar.ajax-loading {
        pointer-events: none;
        opacity: 0.5;
    }

    .cto-toolbar__close {
        border-left: 1px solid #dddddd;
        margin-left: .5em;
    }

    [data-orientation="vertical"] .cto-toolbar__close {
        grid-row: 1;
        border-left: none;
        margin: 0;
        border-bottom: 1px solid #ddd;
    }

    .cto-toolbar__close a {
        width: 1.5em;
        font-weight: 600;
        font-size: 2em;
        color: #444444;
        text-decoration: none;
        display: block;
        text-align: center;
        height: 1.5em;
        line-height: 1.45em;
    }

    [data-orientation="vertical"] .cto-toolbar__close a {
        border-right: 1px solid #ddd;
    }

    .cto-toolbar__close a:hover {
        background: rgba(0, 0, 0, .03);
    }

    .cto-toolbar__close a:hover {
        color: #666666;
    }

</style>

{% for name, template in templates %}
    {%- if block('style', template) is defined -%}
        {% with %}
            {{- block('style', template) -}}
        {% endwith %}
    {%- endif -%}
{% endfor %}


<script>/*<![CDATA[*/
    (function () {
        const toolbar = document.querySelector('.cto-toolbar__inside');

        function request(method, uri, body, callback, addClass = true) {
            body = body || null;
            const request = new XMLHttpRequest();
            request.open(method, uri, true);
            request.setRequestHeader('X-Requested-With', 'XMLHttpRequest');

            if (addClass) {
                toolbar.classList.add('ajax-loading');
            }

            request.onload = function () {
                toolbar.classList.remove('ajax-loading');

                callback.apply(this);
            };
            request.send(body)
        }

        // Fetch toolbar
        request('GET', '{{ action }}', null, function () {
            if (200 === this.status) {
                toolbar.innerHTML = this.responseText;

                const event = new Event('cto-toolbar-loaded');
                window.dispatchEvent(event);
            } else {
                toolbar.innerHTML = '<p>Error while loading the toolbar</p>';
            }
        });

        {% for name, template in templates %}
        {%- if block('javascript', template) is defined -%}
        {% with %}
        {{- block('javascript', template) -}}
        {% endwith %}
        {%- endif -%}
        {% endfor %}

    })();
    /*]]>*/</script>

<!-- END of Contao Preview Toolbar -->
